<UserControl x:Class="Tree_Structures.View.SuccessNotification"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tree_Structures.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="#DDFFDD" CornerRadius="8" Padding="10" Margin="10">
        <StackPanel>
            <TextBlock Text="Успех!" FontWeight="Bold" FontSize="16" Foreground="DarkGreen" />
            <TextBlock x:Name="SuccessMessage" Text="Сообщение" FontSize="14" Margin="0,5,0,0" />
        </StackPanel>
    </Border>
</UserControl>
