<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:wpfui="clr-namespace:Wpf.Ui.Controls;assembly=Wpf.Ui">
    <!-- Main Window Style -->
    <Style x:Key="MainWindowStyle" TargetType="Window">
        <Setter Property="Width" Value="1080" />
        <Setter Property="Height" Value="720" />
        <Setter Property="Background" Value="#FF7386B2" />
    </Style>

    <!-- Tab Item Style -->
    <Style x:Key="TabItemStyle" TargetType="TabItem">
        <Setter Property="Foreground" Value="#FF1EF40A" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="Background" Value="#FF413D3D" />
    </Style>

    <!-- Button Style -->
    <Style x:Key="ButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="#FF413D3D" />
        <Setter Property="Foreground" Value="#FF1EF40A" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="Margin" Value="5" />
        <Setter Property="BorderBrush" Value="Black" />
        <Setter Property="BorderThickness" Value="3" />
    </Style>

</ResourceDictionary>